<% content_for :page_title, "Dynamic DNS Settings" %>

<div class="mb-6">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Dynamic DNS Configuration</h2>
      <p class="text-sm text-gray-600 mt-1">Configure automatic DNS updates for your server's changing IP address</p>
    </div>
    <div class="flex items-center space-x-3">
      <!-- Status Badge -->
      <% case @ddns_settings.status %>
      <% when :healthy %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          <div class="w-2 h-2 bg-green-400 rounded-full mr-1.5 animate-pulse"></div>
          Running
        </span>
      <% when :updating %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
          <div class="w-2 h-2 bg-yellow-400 rounded-full mr-1.5 animate-pulse"></div>
          Updating
        </span>
      <% when :error %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
          <div class="w-2 h-2 bg-red-400 rounded-full mr-1.5"></div>
          Error
        </span>
      <% when :stopped %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
          <div class="w-2 h-2 bg-orange-400 rounded-full mr-1.5"></div>
          Stopped
        </span>
      <% when :disabled %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
          <div class="w-2 h-2 bg-gray-400 rounded-full mr-1.5"></div>
          Disabled
        </span>
      <% else %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
          <div class="w-2 h-2 bg-gray-400 rounded-full mr-1.5"></div>
          Unknown
        </span>
      <% end %>
    </div>
  </div>
</div>

<!-- Error Display -->
<% if @ddns_settings.last_error.present? %>
  <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">DDNS Error</h3>
        <div class="mt-2 text-sm text-red-700">
          <%= @ddns_settings.last_error %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Main Configuration Form -->
  <div class="lg:col-span-2">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Configuration</h3>
      
      <%= form_with(model: @ddns_settings, url: ddns_settings_path, method: :patch, local: true) do |form| %>
        <% if @ddns_settings.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@ddns_settings.errors.count, "error") %> prohibited these settings from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @ddns_settings.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="space-y-6">
          <!-- Enable/Disable Toggle -->
          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div>
              <label class="text-base font-medium text-gray-900">Enable Dynamic DNS</label>
              <p class="text-sm text-gray-600">Automatically update DNS records when your server's IP changes</p>
            </div>
            <div class="flex items-center">
              <%= form.check_box :enabled, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            </div>
          </div>

          <!-- Domain Configuration -->
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-sm font-medium text-gray-900 mb-3">Domain Configuration</h4>
            <div>
              <%= form.label :base_domain, "Base Domain", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_field :base_domain, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "example.com" %>
              <p class="mt-1 text-xs text-gray-500">The domain that will point to your server (e.g., example.com will enable *.example.com)</p>
            </div>
          </div>

          <!-- AWS Route53 Configuration -->
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-sm font-medium text-gray-900 mb-3">AWS Route53 Configuration</h4>
            <div class="space-y-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= form.label :aws_access_key_id, "Access Key ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= form.text_field :aws_access_key_id, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "AKIA..." %>
                </div>
                <div>
                  <%= form.label :aws_secret_access_key, "Secret Access Key", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= form.password_field :aws_secret_access_key, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
                </div>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= form.label :aws_region, "AWS Region", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= form.select :aws_region, 
                      options_for_select([
                        ['US East (N. Virginia)', 'us-east-1'],
                        ['US East (Ohio)', 'us-east-2'],
                        ['US West (N. California)', 'us-west-1'],
                        ['US West (Oregon)', 'us-west-2'],
                        ['EU (Ireland)', 'eu-west-1'],
                        ['EU (London)', 'eu-west-2'],
                        ['EU (Frankfurt)', 'eu-central-1'],
                        ['Asia Pacific (Tokyo)', 'ap-northeast-1'],
                        ['Asia Pacific (Singapore)', 'ap-southeast-1'],
                      ], @ddns_settings.aws_region),
                      { prompt: 'Select a region' },
                      { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
                </div>
                <div>
                  <%= form.label :route53_hosted_zone_id, "Hosted Zone ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= form.text_field :route53_hosted_zone_id, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Z1D633PJN98FT9" %>
                </div>
              </div>
              <p class="text-xs text-gray-500">
                <strong>Note:</strong> Ensure your AWS credentials have the necessary Route53 permissions to update DNS records.
              </p>
            </div>
          </div>

          <!-- Advanced Settings -->
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-sm font-medium text-gray-900 mb-3">Advanced Settings</h4>
            <div>
              <%= form.label :update_interval, "Update Interval (seconds)", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.number_field :update_interval, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", min: 60, step: 60 %>
              <p class="mt-1 text-xs text-gray-500">How often to check for IP changes (minimum 60 seconds)</p>
            </div>
          </div>
        </div>

        <div class="mt-6 flex justify-end">
          <%= form.submit "Save Settings", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Control Panel & Status -->
  <div class="space-y-6">
    <!-- Service Controls -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Service Controls</h3>
      
      <div class="space-y-3">
        <% if @ddns_settings.enabled? %>
          <% if @ddns_settings.container_running? %>
            <%= link_to "Stop Service", stop_service_ddns_settings_path, method: :post, 
                class: "w-full bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded text-center block",
                data: { confirm: "Are you sure you want to stop the DDNS service?" } %>
            <%= link_to "Restart Service", restart_service_ddns_settings_path, method: :post, 
                class: "w-full bg-yellow-600 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded text-center block" %>
          <% else %>
            <%= link_to "Start Service", start_service_ddns_settings_path, method: :post, 
                class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-center block" %>
          <% end %>
        <% else %>
          <p class="text-sm text-gray-500 text-center py-4">
            Enable DDNS in the configuration to access service controls.
          </p>
        <% end %>
      </div>
    </div>

    <!-- Status Information -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Status Information</h3>
      
      <div class="space-y-3 text-sm">
        <div>
          <span class="font-medium text-gray-600">Current Status:</span>
          <span class="text-gray-900 capitalize"><%= @ddns_settings.status %></span>
        </div>
        
        <% if @ddns_settings.current_ip.present? %>
          <div>
            <span class="font-medium text-gray-600">Current IP:</span>
            <span class="text-gray-900"><%= @ddns_settings.current_ip %></span>
          </div>
        <% end %>
        
        <% if @ddns_settings.last_update.present? %>
          <div>
            <span class="font-medium text-gray-600">Last Update:</span>
            <span class="text-gray-900"><%= time_ago_in_words(@ddns_settings.last_update) %> ago</span>
          </div>
        <% end %>
        
        <div>
          <span class="font-medium text-gray-600">Container:</span>
          <span class="text-gray-900">
            <%= @ddns_settings.container_running? ? "Running" : "Stopped" %>
          </span>
        </div>
        
        <div>
          <span class="font-medium text-gray-600">Config File:</span>
          <span class="text-gray-900">
            <%= @ddns_settings.config_file_exists? ? "Present" : "Missing" %>
          </span>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h3>
      
      <div class="space-y-2">
        <% if @ddns_settings.enabled? && @ddns_settings.container_running? %>
          <a href="http://localhost:8000" target="_blank" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-center block text-sm">
            View DDNS Web Interface
          </a>
        <% end %>
        
        <%= link_to "View Configuration File", "#", class: "w-full bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded text-center block text-sm", 
            onclick: "alert('Config file location: #{@ddns_settings.config_file_path}'); return false;" %>
      </div>
    </div>
  </div>
</div>
