<div class="p-8">
  <h1 class="text-2xl font-bold mb-4">Caddy / Reverse Proxy Service</h1>
  <div class="mb-4">
    <span class="font-semibold">Status:</span>    
      <span class="text-green-600"><%= @status %></span>  
  </div>
  <div class="flex space-x-2 mb-6">
    <%= button_to 'Start', start_reverse_proxy_path, method: :post, class: 'px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700' %>
    <%= button_to 'Stop', stop_reverse_proxy_path, method: :post, class: 'px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700' %>
    <%= button_to 'Reload Config', reload_reverse_proxy_path, method: :post, class: 'px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700' %>
    <%= button_to 'Wipe Config', clean_reverse_proxy_path, method: :post, class: 'px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700' %>
  </div>
  <div>
    <h2 class="text-lg font-semibold mb-2">Caddy Config File</h2>
    <pre class="bg-gray-100 p-4 rounded text-sm overflow-x-auto"><%= @proxy_config.presence || 'No config file found.' %></pre>
  </div>
</div>
